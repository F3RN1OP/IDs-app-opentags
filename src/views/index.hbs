<div class="col-md-4 mx-auto">
    <div class="colum">
        <div class="card">
            <div class="card-header">
                <h3>New ID</h3>
            </div>
            <div class="card-body">
                <form action="/new-id" method="POST">
                    <div class="form-group">
                        <input type="number" name="id" class="form-control" placeholder="ID" autofocus>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="container p-2">
            <h3>IDs Creados:</h1>
        </div>
        <ul class="list-group">
            {{#each ids}}
            <li class="list-group-item">
                <div class="row">
                    <div class="mr-auto p-2">{{ id }}</div>
                    <form action="/delete-id/{{_id}}?_method=DELETE" class="form-group" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit"><i class="far fa-trash-alt ml-auto"></i></button>
                        </form>
                    </i>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>